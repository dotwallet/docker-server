{
  "name": "docker-server",
  "version": "1.0.0",
  "description": "a microservice for working with DotWallet APIs",
  "main": "src/index.js",
  "repository": "https://github.com/dotwallet/docker-server.git",
  "author": "DotWallet Team",
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "test-watch": "env TEST=true jest --watchAll",
    "test": "env TEST=true jest",
    "build": "docker build -t jewcub/dotwallet_service:latest . && docker push jewcub/dotwallet_service:latest",
    "google-build": "sh build.sh",
    "google-deploy": "sh deploy.sh",
    "ssl-deploy": "sh init-letsencrypt.sh"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "dotwallet-node": "^1.1.0",
    "express": "^4.17.1",
    "ip": "^1.1.5",
    "jsonwebtoken": "^8.5.1",
    "swagger-jsdoc": "^6.0.2",
    "swagger-ui-express": "^4.1.6",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "supertest": "^6.1.3"
  }
}
